<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="600.0" prefWidth="1280.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.wolf.Controller">
    <children>
        <!--Menubar-->
        <fx:include source="menu.fxml" />

        <BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="1280.0" styleClass="border-pane" VBox.vgrow="NEVER">
            <center>
                <ImageView fx:id="imageView" fitHeight="396.0" fitWidth="512.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">

               </ImageView>
            </center>
            <right>
                <!-- ColorScalePanel -->
                <fx:include fx:id="rightVBox" source="colorScale.fxml" />
            </right>
            <top>
                <HBox alignment="CENTER" prefHeight="43.0" prefWidth="1280.0" styleClass="hbox" BorderPane.alignment="CENTER">
                    <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleZoom">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@imgs/zoom-logo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                            <cursor>
                                <Cursor fx:constant="DEFAULT" />
                            </cursor>
                        </Button>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@imgs/resize_logo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <!-- rotate left-->
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleRotateRightAction">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@imgs/rotate_right_logo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleRotateLeftAction">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@imgs/rotate_left_logo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleColorScale">
                            <graphic>
                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@imgs/color_scale_logo.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>



                    </children>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </HBox>
            </top>
            <left>
                <VBox prefHeight="497.0" prefWidth="220.0" visible="false" BorderPane.alignment="CENTER" />
            </left>
            <bottom>
                <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>

                        <Button fx:id="minusButton" mnemonicParsing="false" onAction="#handleZoomMinusAction" text="Button" visible="false">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Button>

                        <Button fx:id="plusButton" mnemonicParsing="false" onAction="#handleZoomPlusAction" text="Button" visible="false">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Button>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>

    </children>
</VBox>
